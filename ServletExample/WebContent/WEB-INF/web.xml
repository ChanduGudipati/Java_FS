<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>ServletExample</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>ServletExe</servlet-name>
		<servlet-class>com.sai.ServletExe</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletExe</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SelveltJava</servlet-name>
		<servlet-class>com.sai.SelveltJava</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SelveltJava</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.sai.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/formaction</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.sai.RegistrationServlet</servlet-class>

	</servlet>
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/RegistrationServlet</url-pattern>
	</servlet-mapping>


	<context-param>
		<param-name>dataBaseUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/digit</param-value>
	</context-param>
	<context-param>
		<param-name>userName</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>password</param-name>
		<param-value>Divyansh@21</param-value>
	</context-param>

</web-app>